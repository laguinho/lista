doctype html
html
	head
		meta(charset="utf-8")
		title Lista de Tarefas

		meta(name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, minimal-ui")
		meta(name="mobile-web-app-capable" content="yes")
		meta(name="theme-color" content="#455a64")

		link(rel="stylesheet", href="#{assets['lista-css'][env]}")
		link(rel="shortcut icon", href="#{assets['favicon'][env]}")
		link(rel="manifest", href="/manifest.json")

	body
		
		//- appbar
		header.lista-appbar.ui-appbar
			.lista-container.container
				h1
					span Lista de Tarefas
				a.appbar-btn.appbar-left-btn.sidenav-trigger.js-sidenav-trigger(href="#")
					i.material-icons &#xE5D2;
	
		//- sidenav
		include _sidenav.jade

		//- lista
		main.lista-capa
			.lista-container.container
				.placar.js-placar
					ul
				#stream.app-lista
				.mensagem-final.js-mensagem-final

			.loading.in.fade.fade-in
		
		//- tarefa
		article#tarefa.app-tarefa.app-view
		aside#new-post.app-post.app-view

		//- screens
		include _placar.jade
		include _lista.jade
		include _tarefa.jade
		include _new-post.jade
		include _login.jade
		include _common.jade

		//- ui
		.ui-backdrop.js-ui-backdrop
		.ui-bottomsheet.js-ui-bottomsheet
		.ui-toast.js-ui-toast
			.toast-message
			.toast-action

		//- scripts
		include _scripts.jade
