doctype html
html
	head
		meta(charset="utf-8")
		title Lista de Tarefas

		meta(name="viewport" content="user-scalable=no, width=device-width, initial-scale=1, minimal-ui")
		meta(name="mobile-web-app-capable" content="yes")
		meta(name="theme-color" content="#455a64")

		//- Inclusão dos assets listados no assets.json
		each properties, asset in assets["assets"]
			link(rel = properties[env]["rel"], href = properties[env]["href"])

	body

		//- appbar
		header.lista-appbar.ui-appbar.js-ui-appbar
			.lista-container.container
				h1
					.marquee-face
						span Lista de Tarefas
					.marquee-face
						img.laguinho(src="https://assets.laguinho.org/laguinho.svg", alt="Laguinho")
				a.appbar-button.appbar-left-button.sidenav-trigger.js-sidenav-trigger(href="#")
					i.material-icons &#xE5D2;

		//- sidenav
		include _sidenav.pug

		//- livesite
		.app-livesite.js-app-livesite
			.lista-container.container
				.marquee-transitory
					span Lista de Tarefas
				.app-placar.js-app-placar
				//- 24 AGOSTO: PLACAR SIMPLES, CINZA, À DIREITA NO APPBAR, 1 LINHA, SEM GRÁFICO. TURMA DA PESSOA LOGADA FICA DESTACADA
					ul
						// contagem de dias
						// twitter
			include app/_evolucao.pug

		//- lista
		main.lista-capa
			.lista-container.container
				ul.app-lista.js-app-lista
				.mensagem-final.js-mensagem-final

		//- tarefa
		article.app-tarefa.js-app-tarefa.ui-view
		aside#new-post.app-post.ui-view

		//- screens
		include _placar.pug
		include _lista.pug
		include _tarefa.pug
		include _new-post.pug
		include _login.pug
		include _common.pug

		//- ui
		include ui/_loadbar.pug
		include ui/_bottomsheet.pug
		include ui/_toast.pug

		//- scripts
		include _scripts.pug
