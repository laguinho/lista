//- tarefa

template#view-tarefa
	.tarefa-container

		//- header
		header.ui-appbar.tarefa-appbar
			a.appbar-button.appbar-left-button.back.js-tarefa-close(href="/tarefas")
				i.material-icons &#xE5C4;
			h1.fill(data-fill="titulo")

		//- ////////////////////////////////////////////////////////////////////////////////////////////
		//- body
		.tarefa-body

			//- meta
			.tarefa-meta
				.tarefa-card
				.tarefa-placar

			//- posts
			.tarefa-posts
				ul
				.eot

		//- ////////////////////////////////////////////////////////////////////////////////////////////

		//- .tarefa-body.view-body
		//- 	.tarefa-container.container
		//- 		.painel
		//- 			.meta
		//- 			.placar
		//- 				ul
		//- 		.posts
		//- 			ul
		//- 			.tarefa-end

		.tarefa-close.js-tarefa-close.material-icons(title="Voltar à Lista") &#xE5C4;

		//- new post
		button.fab.fab-bottom.user-background.new-post.js-new-post-trigger(title="Novo post")
			i.material-icons &#xE145;

		aside.new-post-sheet(style="display: none;")
			h1 Postar

			mixin new-post-link(title, type, icon, icon_source)
				li
					a(href="#", data-post-type=type)
						if (icon_source === "font-awesome")
							i.fa(class!=icon)
						else
							i.material-icons !{icon}
						= title
			ul
				+new-post-link("Foto", "photo", "&#xE251;")
				+new-post-link("Vídeo", "video", "&#xE02C;")
				+new-post-link("Texto", "text", "&#xE165;")

