//- post cards
template#view-tarefa-post-card
	//- li.ui-card.card.card-l.post
	li.post-card
		.post-body.ui-card
			.post-media
				ul
			.post-caption.fill(data-fill="legenda", data-fill-null="remove")
		.post-label
			.post-turma.fill(data-fill="class: turma")
				.post-bullet.turma-background.turma-border
				span.turma-text.fill(data-fill="turma-formatada")
				span.post-date.fill(data-fill="data-de-postagem-formatada")
		.post-rating
			.post-review.fill(data-fill="avaliacao/mensagem")
			.post-points.fill(data-fill="avaliacao/pontos")

