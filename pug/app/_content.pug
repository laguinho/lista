//- post media
template#media-photo
	li
		.media-wrapper.fill(data-fill="style: padding-aspecto")
			a.fill(href="#", target="_blank", data-fill="href: link-original")
				img.fill(data-fill="src: default")

template#media-video
	li
		.media-wrapper.fill(data-fill="style: padding-aspecto")
			iframe.fill(href="#", target="_blank", data-fill="src: embed", frameborder="0", allowfullscreen)
