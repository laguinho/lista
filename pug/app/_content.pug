template#content-card
	//- li.ui-card.card.card-l.post
	li.content-card.ui-card.fill(data-fill="class: turma, data-post: id")
		.content-body
			.content-media
				ul
			.content-caption.fill(data-fill="legenda", data-fill-null="remove")
			.content-label
				.content-turma.fill(data-fill="class: turma")
					.content-bullet.turma-background.turma-border
					span.turma-text.fill(data-fill="turma-formatada")
				.content-date.fill(data-fill="data-de-postagem-formatada")
				.content-author
					span postado por&nbsp;
					span.fill(data-fill="autor")
		.content-rating
			i.material-icons &#xE5DA;
			.content-points.fill(data-fill="class: avaliacao/class, html: avaliacao/status")
			.content-review.fill(data-fill="avaliacao/mensagem")

